<!DOCTYPE html>
<html lang="en">

<head>
  <title>Post an item</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/new-item.css" />
  <link rel="stylesheet" href="/styles/nav.css" />

  <!-- External Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Bungee&family=Poppins&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
</head>

<body>
  <%- include('partials/_header') %>

  <main>
    <div class="new-item-form">
      <form action="/items" method="post" id="new-item-form">
        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__title">Title</label>
          <input type="text" name="title" placeholder="Title" id="new-item-form__title">
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__price">Price</label>
          <input placeholder="Price" type="number" name="price" id="new-item-form__price">
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__description">Description</label>
          <textarea placeholder="Description" name="description" id="new-item-form__description" cols="30"
            rows="10"></textarea>
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__condition">Condition</label>
          <select id="new-item-form__condition" name="condition">
            <option value="" disabled selected>Select condition ...</option>
            <option value="new">New</option>
            <option value="used-like-new">Used - Like New</option>
            <option value="used-good">Used - Good</option>
            <option value="used-fair">Used - Fair</option>
          </select>
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__category">Category</label>
          <select id="new-item-form__category" name="category">
            <option value="" disabled selected>Select category ...</option>
            <option value="bedroom">Bedroom</option>
            <option value="bathroom">Bathroom</option>
            <option value="living-room">Living Room</option>
            <option value="kitchen">Kitchen</option>
            <option value="patio">Patio</option>
            <option value="miscellaneous">Miscellaneous</option>
          </select>
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__image">Image</label>
          <input placeholder="Image" type="text" name="photo_url" id="new-item-form__image">
        </div>

        <hr>

        <p2>Location</p2>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__street">Street</label>
          <input placeholder="Street" type="text" name="street" id="new-item-form__street" />
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__country">Country</label>
          <input placeholder="Country" type="text" name="country" id="new-item-form__country" />
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__city">City</label>
          <input placeholder="City" type="text" name="city" id="new-item-form__city" />
        </div>

        <div class="new-item-form__field-wrapper">
          <label for="new-item-form__pc">Postal Code</label>
          <input placeholder="Postal Code" type="text" name="post_code" id="new-item-form__pc" />
        </div>


        <div class="new-item-form__field-wrapper">
          <button>Create</button>
          <a id="item-form__cancel" href="/">Cancel</a>
        </div>

      </form>
    </div>
  </main>

</body>

</html>
